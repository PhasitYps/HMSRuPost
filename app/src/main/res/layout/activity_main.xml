<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingVertical="5dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/menuHomeRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <ImageView
                    android:id="@+id/menuHomeIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_home"
                    />

                <TextView
                    android:id="@+id/menuHomeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="หน้าหลัก"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuMapRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/menuMapIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_bookmark"
                    />

                <TextView
                    android:id="@+id/menuSearchTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="บันทึก"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/postLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plus"
                    app:tint="@color/black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plus"
                    android:textSize="12dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuNotifyRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/menuNotifyIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_notification"
                    />

                <TextView
                    android:id="@+id/menuNotifyTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เเจ้งเตือน"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuUserRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:padding="5dp"
                >

                <ImageView
                    android:id="@+id/menuUserIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_user"
                    />

                <TextView
                    android:id="@+id/menuUserTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="โปรไฟล์"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>